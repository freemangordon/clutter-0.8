#!/usr/bin/make -f
%:
	dh $@

ifeq ($(DEB_HOST_ARCH),$(findstring $(DEB_HOST_ARCH),armel armhf))
CONFFLAGS += --with-flavour=eglx
else
CONFFLAGS += --with-flavour=glx
endif

CFLAGS := -DG_DEBUG_DISABLE -Winline

override_dh_auto_configure:
	dh_auto_configure -- \
		--enable-debug=no \
		--with-gles=2.0 \
		$(CONFFLAGS)
